!!! 5
%html
  %head
    %title= page_title
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %meta{ charset: 'UTF-8' }
    %meta{ content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }
    %meta{ content: 'width=device-width,initial-scale=1.0,user-scalable=no', name: 'viewport' }
    %meta{ name: 'description', content: t('.site_description') }

  %body{ class: page_class }
    %nav{ role: 'navigation' }
      .nav-wrapper.container
        = link_to application_name, root_path, id: 'logo-container', class: 'brand-logo'
        %ul.right.hide-on-med-and-down
          - main_navigation.each do |nav_hash|
            %li= link_to nav_hash[:text], nav_hash[:link], target: '_blank'
        %ul.side-nav#nav-mobile
          - mobile_nav.each do |nav_hash|
            %li= link_to nav_hash[:text], nav_hash[:link]
        =link_to '#', class: 'button-collapse', data: { activates: 'nav-mobile' } do
          %i.material-icons menu

    .yield= yield

    = render partial: 'shared/footer'

    :javascript
      (function($){
        $(function(){

          $('.button-collapse').sideNav();
          $('.parallax').parallax();

        }); // end of document ready
      })(jQuery); // end of jQuery name space

